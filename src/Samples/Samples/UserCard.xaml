<UserControl
    x:Class="Samples.UserCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:xuiel="using:X.UI.EffectLayer"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <xuiel:EffectLayer x:Name="bkgLayer" HorizontalAlignment="Stretch"  GlowFill="Transparent" VerticalAlignment="Stretch" GlowAmount="3" GlowColor="{Binding Accent2}" ShowGlowArea="False" ></xuiel:EffectLayer>
        <StackPanel x:Name="root" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="jose.fajardo@supersecret.com.au" FontSize="12" HorizontalAlignment="Right" Foreground="White"></TextBlock>
                <TextBlock Text="Jose Fajardo" FontSize="20" HorizontalAlignment="Right" Foreground="White"></TextBlock>
            </StackPanel>
            <Border BorderBrush="White" BorderThickness="1" Width="40" Height="40" VerticalAlignment="Top" Margin="5,3,0,0" >
                <Image HorizontalAlignment="Stretch" Stretch="UniformToFill" Source="ms-appx:///assets/avatar1.png"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>

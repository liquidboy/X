<UserControl
    x:Class="Samples.ucSample03"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xuiel="using:X.UI.EffectLayer"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="layoutRoot">
        <StackPanel Width="500">
            <Grid x:Name="grdRoot" Width="300" Height="300">
                <xuiel:EffectLayer x:Name="bkgLayer" HorizontalAlignment="Left"  GlowFill="Purple" VerticalAlignment="Top" GlowAmount="3" GlowColor="Gray" ShowGlowArea="False" ></xuiel:EffectLayer>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

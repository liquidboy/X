<UserControl
    x:Class="Samples.Chrome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="90">
            <Rectangle Fill="{Binding Accent3Brush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></Rectangle>
            <TextBlock Text="X.UI Samples (1.0.34)" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Foreground="White"></TextBlock>
            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="40" Margin="3,3,3,0">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Offset="1"/>
                        <GradientStop Color="#33FFFFFF" Offset="0.335"/>
                        <GradientStop Color="#28FFFFFF" Offset="0.588"/>
                        <GradientStop Color="#3FFFFFFF" Offset="0.236"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Grid>
</UserControl>

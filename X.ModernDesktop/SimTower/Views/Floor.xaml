<UserControl
    x:Class="X.ModernDesktop.SimTower.Views.Floor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:X.ModernDesktop.SimTower.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:li="using:X.ModernDesktop.SimTower.Models.Item"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

  <Grid Background="{x:Bind SetBackgroundColor()}" BorderBrush="#FF040404" >
    <TextBlock FontSize="8" Text="{Binding Position.Y}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-20,0,0,0"></TextBlock>
    <Border BorderBrush="#FF858585" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0,1,0,3" BackgroundSizing="OuterBorderEdge">
      <Border.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/lobby.png" Stretch="Uniform" AlignmentX="Left" AlignmentY="Top"/>
      </Border.Background>
    </Border>
  </Grid>
</UserControl>

<UserControl
    x:Class="X.ModernDesktop.SimTower.Views.Floor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:X.ModernDesktop.SimTower.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:li="using:X.ModernDesktop.SimTower.Models.Item"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

  <Grid Background="{x:Bind SetBackgroundColor()}" BorderBrush="#FF040404" >
    <Rectangle HorizontalAlignment="Stretch" Height="10" VerticalAlignment="Top" Stroke="#FF070707" StrokeThickness="4"/>
    <TextBlock FontSize="8" Text="{Binding Position.Y}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-20,0,0,0"></TextBlock>
  </Grid>
</UserControl>
